@model Personel_Takip_Yönetim_Sistemi.Models.Login

@{
    ViewData["Title"] = "Giriş Yap";
    ViewBag.HideNavbar = true;
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        background-color: #1A1F2B;
    }

    .login-wrapper {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card {
        background-color: #2A2F40;
        color: #F3F4F6;
        border: none;
        border-radius: 10px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.5);
    }

    .form-control {
        background-color: #1F2432;
        border: 1px solid #3B82F6;
        color: #F3F4F6;
    }

        .form-control:focus {
            border-color: #F59E0B;
            box-shadow: 0 0 0 0.2rem rgba(245, 158, 11, 0.25);
            background-color: #1F2432;
            color: #fff;
        }

    .btn-primary {
        background-color: #3B82F6;
        border-color: #3B82F6;
    }

        .btn-primary:hover {
            background-color: #2563EB;
            border-color: #2563EB;
        }

    .text-danger {
        color: #EF4444 !important;
    }

    .logo-box {
        width: 60px;
        height: 60px;
        background-color: #fff;
        border-radius: 5px;
        overflow: hidden;
    }

        .logo-box img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }
</style>

<div class="login-wrapper">
    <div class="card shadow-lg p-4 text-center" style="max-width: 400px; width: 100%;">
        <h2 class="mb-4">Giriş Yap</h2>

        <form asp-action="Index" method="post">
            <div class="mb-3 text-start">
                <label asp-for="loginame" class="form-label">Kullanıcı Adı</label>
                <input asp-for="loginame" class="form-control" />
                <span asp-validation-for="loginame" class="text-danger small"></span>
            </div>

            <div class="mb-3 text-start">
                <label asp-for="login_pass" class="form-label">Şifre</label>
                <input asp-for="login_pass" type="password" class="form-control" />
                <span asp-validation-for="login_pass" class="text-danger small"></span>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary">Giriş</button>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Error
                </div>
            }
        </form>

        <!-- Logolar -->
        <div class="d-flex justify-content-center mt-4 gap-3">
            <div class="logo-box">
                <a href="https://batuhancann.github.io" target="_blank">
                    <img src="~/img/bc_saydam.png" alt="Logo 1">
                </a>
            </div>
            <div class="logo-box">
                <img src="~/img/Mersin_University_logo.svg.png" alt="Logo 2">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
